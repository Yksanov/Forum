@model Forum.ViewModels.RegisterViewModel
@{
ViewBag.Title = "Регистрация";
}
<h4 class="text-center">Регистрация</h4>
<div class="row">
    <div class="card border-2">
        <div class="card-body d-flex justify-content-center">
            <div class="col-md-4">
                <form asp-action="Register" asp-controller="Account" enctype="multipart/form-data" asp-anti-forgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Введите имя пользователя</label><br/>
                            <input type="text" asp-for="UserName" class="form-control"/><br/>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Введите Email</label><br/>
                            <input type="email" asp-for="Email" class="form-control"/><br/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="input-group mb-3">
                            <input asp-for="Avatar" type="file" class="form-control" accept="image/*">
                            <span asp-validation-for="Avatar" class="text-danger"></span>
                        </div>

                        <div>
                            <label asp-for="Password" class="form-label">Введите пароль</label><br/>
                            <input id="password" type="password" asp-for="Password" class="form-control"/>
                            <span toggle="#password" class="fa fa-fw fa-eye field-icon toggle-password"></span><br/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="ConfirmPassword" class="form-label">Повторите пароль</label><br/>
                            <input id="confirmPassword" type="password" asp-for="ConfirmPassword" class="form-control"/>
                            <span toggle="#confirmPassword" class="fa fa-fw fa-eye field-icon toggle-password"></span><br/>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="py-3 d-flex justify-content-center">
                            <input type="submit" value="Регистрация" class="btn btn-outline-primary"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
<script>
    $(document).ready(function(){
        $(".toggle-password").click(function() {

            $(this).toggleClass("fa-eye fa-eye-slash");

            var input = $($(this).attr("toggle"));

            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    });
</script>

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}